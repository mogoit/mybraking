{% extends 'MyBrakingBackBundle::base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block nav %}{% endblock %}

{% block body %}
    <div class="container">

      <form class="form-signin" method="post">
        <h2 class="form-signin-heading">Connexion a l'administration</h2>
        <label for="inputEmail" class="sr-only">Utilisateur</label>
        <input type="text" name="login" class="form-control" placeholder="Utilisateur" autofocus>
        <label for="inputPassword" class="sr-only">Mot de passe</label>
        <input type="password" name="password" class="form-control" placeholder="Mot de passe">
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="submit">Connexion</button>
      </form>
      <center><p>Panel version 1.0</p></center>
    </div> 

{% endblock %}
